<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@mipmap/img_background_dn"

    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Nhóm 8"
        android:padding="10dp"
        android:id="@+id/banner"

        android:textSize="18dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="60dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng ký tài khoản"
                android:textSize="25dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"

                android:textColor="#E31818" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:background="@drawable/tkkhungdn"
                    android:inputType="text"
                    android:id="@+id/edtten_ttctkh"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Họ và tên" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                />

                <EditText
                    android:background="@drawable/tkkhungdn"

                    android:id="@+id/edtsdt_ttctkh"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="number"

                    android:hint="Số điện thoại" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:background="@drawable/tkkhungdn"
                    android:inputType="text"
                    android:id="@+id/edtdc_ttctkh"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Địa chỉ" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:background="@drawable/tkkhungdn"
                    android:inputType="text"
                    android:id="@+id/edtusername_ttctkh"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Tên đăng nhập" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutpass_ttkh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:inputType="text"
                    android:background="@drawable/tkkhungdn"
                    android:id="@+id/edtpass_ttctkh"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Mật khẩu" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký "
                    android:backgroundTint="#00BCD4"
                    android:layout_margin="10dp"
                    android:id="@+id/btnthemkh" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Hủy"
                    android:backgroundTint="#F44336"

                    android:layout_margin="10dp"
                    android:id="@+id/btnhuy" />


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>