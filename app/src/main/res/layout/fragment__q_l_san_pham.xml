<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_quanly.fragment_QLSanPham">


    <androidx.appcompat.widget.SearchView

        android:id="@+id/seach"

        android:layout_margin="10dp"
        android:background="@drawable/tkkhungdn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:id="@+id/item"

        android:layout_below="@+id/seach"
        android:background="#00000000"

      android:orientation="horizontal"

      >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#0C424242"
            app:cardCornerRadius="20dp"
            android:background="@drawable/tk_khung"
            app:cardElevation="2dp"
            >
            <ImageButton
                android:id="@+id/ibt_maylanh"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:src="@drawable/ic_maylanh" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#0C424242"
            app:cardCornerRadius="20dp"
            android:background="@drawable/tk_khung"
            app:cardElevation="2dp"
            >
            <ImageButton
                android:id="@+id/ibt_maygiat"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:src="@drawable/ic_maygiat" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#0C424242"
            app:cardCornerRadius="20dp"
            android:background="@drawable/tk_khung"
            app:cardElevation="2dp"
            >
            <ImageButton
                android:id="@+id/ibt_mayxay"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:src="@drawable/ic_mayxay" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#0C424242"
            app:cardCornerRadius="20dp"
            android:background="@drawable/tk_khung"
            app:cardElevation="2dp"
            >
            <ImageButton
                android:id="@+id/ibt_noicom"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:src="@drawable/ic_noicom" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#0C424242"
            app:cardCornerRadius="20dp"
            android:background="@drawable/tk_khung"
            app:cardElevation="2dp"
            >
            <ImageButton
                android:id="@+id/ibt_tulanh"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:src="@drawable/ic_tulanh" />
        </LinearLayout>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcviewQLsp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/flthemsanpham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/icon_shopapp" />
</RelativeLayout>